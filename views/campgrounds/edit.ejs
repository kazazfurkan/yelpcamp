<%- include('../partials/header') %>

<div class='container'>
    <h1 style='text-align:center'>Edit <%=campground.name %></h1>
    <div class=row>
        <div style='width:40%; margin: 35px auto'>
            <form action='/campgrounds/<%=campground._id%>?_method=PUT' method='POST'>
                <div class='form-group'>
                    <label for="form-campground-name">Campground Name</label>
                    <input id='form-campground-name' class='form-control' type='text' name='campground[name]' value='<%=campground.name%>'>
                </div>
                <div class='form-group'>
                    <label for="form-campground-location">Location</label>
                    <input id='form-campground-location' class='form-control' type='address' name='campground[location]' value='<%=campground.location%>'>
                </div>
                <div class='form-group'>
                    <label for="form-campground-name">Description</label>
                    <textarea id='form-campground-name' class='form-control' name='campground[description]'><%=campground.description%></textarea>
                </div>
                <div class='form-group'>
                    <label for="form-campground-price">Price</label>
                    <input id='form-campground-price' class='form-control' type='number' name='campground[price]' min='0.00' step='0.01' value='<%=campground.price %>'>
                </div>
                <div class='form-group'>
                    <label for="form-campground-url">URL for Image</label>
                    <input id='form-campground-url' class='form-control' type='text' name='campground[image]' value='<%=campground.image%>'>
                </div>
                <button class='btn btn-md btn-primary btn-block'>Submit</button>
            </form>
        <a class='btn text-primary font-weight-bold' href='/campgrounds'+<%=campground._id%> >Go back</a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>

